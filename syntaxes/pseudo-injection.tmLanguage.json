{
  "scopeName": "markdown.pseudo.codeblock",
  "injectionSelector": "L:text.html.markdown",
  "patterns": [
    {
      "include": "#pseudo-code-block"
    }
  ],
  "repository": {
    "pseudo-code-block": {
      "begin": "(^|\\G)(\\s*)(```)(pseudo|pseudolang|Pseudo)(?:\\s+(.*?))?(?=\\s*$)",
      "name": "markup.fenced_code.block.markdown",
      "end": "(^|\\G)(\\2)(```)(\\s*)$",
      "beginCaptures": {
        "3": {
          "name": "punctuation.definition.markdown"
        },
        "4": {
          "name": "fenced_code.block.language.pseudo"
        },
        "5": {
          "name": "fenced_code.block.language.attributes.pseudo"
        }
      },
      "endCaptures": {
        "3": {
          "name": "punctuation.definition.markdown"
        }
      },
      "patterns": [
        {
          "begin": "(^|\\G)(\\s*)(.*)",
          "while": "(^|\\G)(?!\\s*```)",
          "contentName": "meta.embedded.block.pseudo",
          "patterns": [
            {
              "include": "source.pseudo"
            }
          ]
        }
      ]
    }
  }
}
